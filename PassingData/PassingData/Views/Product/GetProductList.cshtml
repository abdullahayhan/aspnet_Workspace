@using PassingData.Models
@model List<Product>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        table{
            border-collapse:collapse;
            width:100%;
        }
        td,th{
            border:1px solid #dddddd;
            text-align:left;
            padding:9px;
        }
        tr:nth-child(event){
            background-color:#dddddd;
        }
    </style>
</head>
<body>
    <h2 style="text-align:center">ÜRÜN LİSTESİ</h2>
    <table>
        <tr>
            <th>ÜRÜN İSİM</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
        </tr>
        @foreach (Product item in @Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.UnitPrice TL</td>
            </tr>
        }
    </table>
</body>
</html>